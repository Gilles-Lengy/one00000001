{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "color": {
      "palette": [
        {
          "name": "Base",
          "slug": "base",
          "color": "#ffffff"
        },
        {
          "name": "Contrast",
          "slug": "contrast",
          "color": "#000000"
        },
        {
          "name": "Accent 1",
          "slug": "accent-1",
          "color": "#ff6347"
        },
        {
          "name": "Accent 2",
          "slug": "accent-2",
          "color": "#4682b4"
        },
        {
          "name": "Accent 3",
          "slug": "accent-3",
          "color": "#32cd32"
        }
      ],
      "custom": false,
      "defaultPalette": false
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "Open Sans, sans-serif",
          "name": "Open Sans",
          "slug": "open-sans"
        }
      ],
      "fontSizes": [
        {
          "name": "Small",
          "slug": "small",
          "size": "0.75rem"
        },
        {
          "name": "Medium",
          "slug": "medium",
          "size": "1rem"
        },
        {
          "name": "Large",
          "slug": "large",
          "size": "1.5rem"
        },
        {
          "name": "Extra Large",
          "slug": "extra-large",
          "size": "2rem"
        }
      ],
      "customFontSize": false,
      "dropCap": false
    },
    "layout": {
      "contentSize": "43.75rem",
      "wideSize": "75rem"
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--base)",
      "text": "var(--wp--preset--color--contrast)"
    },
    "typography": {
      "fontFamily": "Open Sans, sans-serif",
      "lineHeight": "1.5"
    }
  }
}